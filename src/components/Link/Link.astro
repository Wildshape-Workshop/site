---
import type { HTMLAttributes } from "astro/types";

interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}
const props = Astro.props;
---

<a {...props}>
  <slot />
</a>

<style>
  a {
    color: var(--link-color);
    text-decoration: none;
    transition: color 500ms ease;
    padding: 0.5rem;
    position: relative;
    outline: none;
    border: none;
    letter-spacing: 0.05rem;
    transition:
      color 500ms ease,
      background-color 500ms ease;
  }

  a::before,
  a::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 1px;
    background-color: var(--link-color);
    left: 0;
    transition: transform 0.3s ease;
  }

  a::before {
    top: 0;
    transform: scaleX(1);
  }

  a::after {
    bottom: 0;
    transform: scaleX(1);
  }

  a:hover::before,
  a:hover::after,
  a:focus::before,
  a:focus::after {
    transform: scaleX(0);
  }

  a:hover,
  a:focus {
    color: var(--link-color-hover);
    background-color: var(--link-background-hover);
  }
</style>
